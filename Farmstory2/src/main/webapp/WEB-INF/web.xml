<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Farmstory2</display-name>

  <welcome-file-list>
	<!--시작 페이지-->
    <welcome-file>_index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- 컨트롤러(서블릿) 등록 -->
	<servlet>
		<servlet-name>MainController</servlet-name>
		<servlet-class>kr.co.farmstory2.controller.MainController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MainController</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<!-- model-2 보안설정 -->
	<!-- 클라이언트가 jsp 사이트로 이동하기 방지(해킹위험있음) -->
	<security-constraint>
		<display-name>Prohibit Model1</display-name>
		<web-resource-collection>
			<web-resource-name>secure page</web-resource-name>
			<url-pattern>*.jsp</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>nobody</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>free pages</web-resource-name>
			<url-pattern>/_index.jsp</url-pattern>
		</web-resource-collection>
	</security-constraint>


	<!-- 문자셋 인코딩 필터 등록 -->
	<filter>
		<filter-name>SetCharacterEncodingFilter</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>SetCharacterEncodingFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
  
</web-app>